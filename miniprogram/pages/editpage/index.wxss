/* pages/editpage/index.wxss */
.tool-bar {
    width: 100%;
    height: 50px;
    display: flex;
    background-color: #EFEFF4;
    justify-content: space-around;
    align-items: center;
    position: fixed;
    bottom: 0;
}
.tool-bar-item {
    width: 35px;
    height: 35px;
}
.record-tool {
    height: 35px;
    display: flex;
    justify-content: space-around;
    align-items: center;
    border-bottom: 1px solid #ddd;
}
.record-time, .record-end, .record-play {
    flex: 1;
}
.record-end {
    text-align: center;
    color: aqua;
}
.record-line {
    flex: 4;
    height: 1px;
    background-color: #ddd;
}
.article {
    text-align: center;
    padding-top: 10px;
    font-size: 15px;
}
.words {
    display: inline-block;
    text-align: left;
    padding-top: 10px;
}
.picture {
    position: relative;
    padding: 10px 0;
    width: 100%;
    height: 260px;
    text-align: center;
}
.save {
    height: 60px;
    text-align: right
}